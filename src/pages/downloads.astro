---
import BaseLayout from '../layouts/BaseLayout.astro';
import Notice from '../components/Notice.astro';

const base = import.meta.env.BASE_URL;
---

<BaseLayout title="Downloads - Queens Park Rangers U11B" description="Download practice calendar, forms, and documents for QPR U11B players and parents.">
  <div class="container">
    <header style="text-align: center; margin-bottom: var(--spacing-2xl);">
      <h1>Downloads</h1>
      <p>Important forms, checklists, and documents for players and parents.</p>
    </header>

    <div style="max-width: 600px; margin: 0 auto;">
      <div class="card" style="margin-bottom: var(--spacing-xl);">
        <h2>ðŸ“… Practice Calendar</h2>
        <p>Download the complete practice schedule including holidays and breaks.</p>
        <div style="text-align: center; margin-top: var(--spacing-lg);">
          <a href={`${base}qpr_practice_calendar.ics`} class="btn" download>
            ðŸ“… Download Practice Calendar (.ics)
          </a>
        </div>
        <p style="font-size: var(--font-size-sm); color: var(--color-text-light); margin-top: var(--spacing-md);">
          <em>Import this calendar into your phone or computer to never miss a practice!</em>
        </p>
      </div>

      <Notice type="info" title="More Downloads">
        <p>For additional team documents, forms, and schedules, please check TeamSnap or contact the coach.</p>
      </Notice>

      <div style="margin-top: var(--spacing-xl); text-align: center;">
        <a href={`${base}about/`} class="btn">Contact Coach for Questions</a>
      </div>
    </div>
  </div>
</BaseLayout>
