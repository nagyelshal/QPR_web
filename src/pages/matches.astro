---
import BaseLayout from '../layouts/BaseLayout.astro';
import matchesData from '../../data/matches.json';
import seasonSchedule from '../../data/season-schedule.json';

const title = "Match Center";
const description = "View match details, scores, and highlights";

// Use site base path for links
const base = import.meta.env.BASE_URL;

// Split matches into upcoming and completed, sort appropriately
const upcomingMatches = matchesData.matches
  .filter(m => m.result === 'pending')
  .sort((a, b) => new Date(a.date) - new Date(b.date)); // Soonest first

const completedMatches = matchesData.matches
  .filter(m => m.result !== 'pending')
  .sort((a, b) => new Date(b.date) - new Date(a.date)); // Most recent first

// Helper function to determine home/away status
function getVenueInfo(match) {
  // First try to find the match in season schedule by match number
  const scheduleMatch = seasonSchedule.matches.find(m => m.match_number === match.match_number);
  
  if (scheduleMatch) {
    // Use the definitive home/away info from season schedule
    const isQPRHome = scheduleMatch.home_team.includes('Queens Park Rangers') || scheduleMatch.home_team.includes('QPR');
    return {
      isHome: isQPRHome,
      icon: isQPRHome ? 'üè†' : '‚úàÔ∏è',
      text: isQPRHome ? 'Home' : 'Away',
      class: isQPRHome ? 'home' : 'away'
    };
  }
  
  // Fallback logic if not found in schedule
  const isHome = match.location.toLowerCase().includes('home') || 
                 match.location.toLowerCase() === 'tbd';
  
  return {
    isHome,
    icon: isHome ? 'üè†' : '‚úàÔ∏è',
    text: isHome ? 'Home' : 'Away',
    class: isHome ? 'home' : 'away'
  };
}
---

<BaseLayout title={title} description={description}>
  <div class="container">
    <div class="matches-header">
      <h1>Match Center</h1>
      <p>View match details, scores, and highlights.</p>
    </div>

    {upcomingMatches.length > 0 && (
      <div class="section-header upcoming-header">
        <h2>Upcoming Matches</h2>
        <span class="match-count">{upcomingMatches.length} matches</span>
      </div>
    )}

    <div class="matches-grid">
      {upcomingMatches.map(match => {
        const venueInfo = getVenueInfo(match);
        return (
        <div class="match-card upcoming" data-match-id={match.id}>
          <div class="match-header">
            <div class="match-date">
              {new Date(match.date).toLocaleDateString('en-US', {
                weekday: 'short',
                month: 'short',
                day: 'numeric'
              })}
            </div>
            <div class="match-week">Week {match.week}</div>
            <div class={`venue-badge ${venueInfo.class}`}>
              <span class="venue-icon">{venueInfo.icon}</span>
              <span class="venue-text">{venueInfo.text}</span>
            </div>
          </div>

          <div class="match-teams">
            <div class="team home">
              <div class="team-name">QPR U11B</div>
              <div class="team-score">-</div>
            </div>
            <div class="vs">VS</div>
            <div class="team away">
              <div class="team-name">{match.opponent}</div>
              <div class="team-score">-</div>
            </div>
          </div>

          <div class="match-details">
            <div class="detail-item">
              <span class="label">Kickoff:</span>
              <span class="value">{match.kickoff}</span>
            </div>
            <div class="detail-item">
              <span class="label">Location:</span>
              <span class="value">{match.location}</span>
            </div>
            <div class="detail-item">
              <span class="label">Match #:</span>
              <span class="value">{match.match_number}</span>
            </div>
          </div>

          <div class="match-status pending">
            <span>Upcoming Match</span>
          </div>

          <a href={`${base}matches/${match.id}/`} class="match-link">
            View Details
          </a>
        </div>
        );
      })}
    </div>

    <div class="section-header completed-header">
      <h2>Completed Matches</h2>
      <span class="match-count">{completedMatches.length} matches</span>
    </div>

    <div class="matches-list">
      {completedMatches.map((match, index) => {
        const venueInfo = getVenueInfo(match);
        // derive scores
        let qprScore = '-';
        let oppScore = '-';
        let isCancelled = match.result === 'cancelled';
        if (!isCancelled) {
          if (match.final_score && typeof match.final_score.qpr !== 'undefined') {
            qprScore = match.final_score.qpr;
            oppScore = match.final_score.opponent;
          } else if (typeof match.result === 'string') {
            const m = match.result.match(/^(\d+)-(\d+)/);
            if (m) {
              qprScore = m[1];
              oppScore = m[2];
            }
          }
        }
        // Determine result class
        const isWin = !isCancelled && Number(qprScore) > Number(oppScore);
        const isDraw = !isCancelled && Number(qprScore) === Number(oppScore);
        const isLoss = !isCancelled && Number(qprScore) < Number(oppScore);
        const resultClass = isCancelled ? 'cancelled' : isWin ? 'win' : isDraw ? 'draw' : 'loss';
        const isLatest = index === 0;

        return (
        <details class={`match-accordion ${resultClass}`} open={isLatest} data-match-id={match.id}>
          <summary class="match-summary">
            <div class="summary-left">
              <span class="summary-date">
                {new Date(match.date).toLocaleDateString('en-US', { month: 'short', day: 'numeric' })}
              </span>
              <span class="summary-opponent">{match.opponent}</span>
            </div>
            <div class="summary-right">
              <span class={`summary-score ${resultClass}`}>
                {isCancelled ? 'X-X' : `${qprScore}-${oppScore}`}
              </span>
              <span class={`summary-result ${resultClass}`}>
                {isCancelled ? 'CAN' : isWin ? 'W' : isDraw ? 'D' : 'L'}
              </span>
              <span class="expand-icon"></span>
            </div>
          </summary>

          <div class="match-content">
            <div class="match-header-row">
              <div class="match-week">Week {match.week}</div>
              <div class={`venue-badge ${venueInfo.class}`}>
                <span class="venue-icon">{venueInfo.icon}</span>
                <span class="venue-text">{venueInfo.text}</span>
              </div>
            </div>

            <div class="match-details-compact">
              <span>Kickoff: {match.kickoff}</span>
              <span>{match.location}</span>
            </div>

            {!isCancelled && match.final_score && match.final_score.half_time && (
              <div class="half-time">Half-time: {match.final_score.half_time}</div>
            )}

            {!isCancelled && match.scorers && match.scorers.length > 0 && (
              <div class="scorers-compact">
                <strong>Scorers:</strong> {match.scorers.join(', ')}
              </div>
            )}

            {isCancelled && match.reason && (
              <div class="cancel-reason">{match.reason}</div>
            )}

            <a href={`${base}matches/${match.id}/`} class="match-link-compact">
              View Full Details
            </a>
          </div>
        </details>
        );
      })}
    </div>
  </div>
</BaseLayout>

<style>
  .matches-header {
    text-align: center;
    margin-bottom: var(--spacing-2xl);
  }
  .half-time {
    margin-bottom: var(--spacing-md);
    color: var(--color-text-light);
    font-style: italic;
  }

  .matches-header h1 {
    font-size: 3rem;
    background: linear-gradient(135deg, #1976d2 0%, #42a5f5 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: var(--spacing-md);
  }

  .section-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--spacing-lg);
    padding: var(--spacing-md) var(--spacing-lg);
    border-radius: 12px;
  }

  .section-header h2 {
    margin: 0;
    font-size: 1.5rem;
    font-weight: 700;
  }

  .section-header .match-count {
    font-size: 0.9rem;
    font-weight: 600;
    padding: var(--spacing-xs) var(--spacing-sm);
    border-radius: 20px;
  }

  .upcoming-header {
    background: linear-gradient(135deg, #fff3e0 0%, #ffe0b2 100%);
  }

  .upcoming-header h2 {
    color: #e65100;
  }

  .upcoming-header .match-count {
    background: #e65100;
    color: white;
  }

  .completed-header {
    background: linear-gradient(135deg, #e3f2fd 0%, #bbdefb 100%);
    margin-top: var(--spacing-xl);
  }

  .completed-header h2 {
    color: #1565c0;
  }

  .completed-header .match-count {
    background: #1565c0;
    color: white;
  }

  .matches-grid {
    display: grid;
    gap: var(--spacing-lg);
    margin-bottom: var(--spacing-2xl);
  }

  .match-card {
    background: white;
    border-radius: 16px;
    padding: var(--spacing-xl);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
    border: 2px solid transparent;
  }

  .match-card.upcoming {
    border-left: 4px solid #e65100;
  }

  .match-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
    border-color: var(--color-primary);
  }

  .match-card.upcoming:hover {
    border-color: #e65100;
  }

  /* Collapsible Completed Matches */
  .matches-list {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-sm);
    margin-bottom: var(--spacing-2xl);
  }

  .match-accordion {
    background: white;
    border-radius: 12px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
    overflow: hidden;
    border-left: 4px solid #ccc;
  }

  .match-accordion.win {
    border-left-color: #2ecc71;
  }

  .match-accordion.draw {
    border-left-color: #9b59b6;
  }

  .match-accordion.loss {
    border-left-color: #e74c3c;
  }

  .match-accordion.cancelled {
    border-left-color: #95a5a6;
  }

  .match-summary {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: var(--spacing-md) var(--spacing-lg);
    cursor: pointer;
    user-select: none;
    list-style: none;
  }

  .match-summary::-webkit-details-marker {
    display: none;
  }

  .match-summary:hover {
    background: #f8f9fa;
  }

  .summary-left {
    display: flex;
    align-items: center;
    gap: var(--spacing-md);
    flex: 1;
    min-width: 0;
  }

  .summary-date {
    font-weight: 600;
    color: var(--color-text-light);
    min-width: 60px;
  }

  .summary-opponent {
    font-weight: 600;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .summary-right {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
  }

  .summary-score {
    font-weight: 700;
    font-size: 1.1rem;
    min-width: 45px;
    text-align: center;
  }

  .summary-score.win {
    color: #2ecc71;
  }

  .summary-score.draw {
    color: #9b59b6;
  }

  .summary-score.loss {
    color: #e74c3c;
  }

  .summary-score.cancelled {
    color: #95a5a6;
  }

  .summary-result {
    font-weight: 700;
    font-size: 0.85rem;
    padding: 2px 8px 2px 12px;
    border-radius: 4px;
    min-width: 32px;
    text-align: center;
  }

  .summary-result.win {
    background: #d4edda;
    color: #155724;
    position: relative;
  }

  /* Colorblind-friendly: checkmark pattern for wins */
  .summary-result.win::before {
    content: '';
    position: absolute;
    left: 2px;
    top: 50%;
    transform: translateY(-50%);
    width: 4px;
    height: 4px;
    border-radius: 50%;
    background: #155724;
  }

  .summary-result.draw {
    background: #e8daef;
    color: #6c3483;
    position: relative;
  }

  /* Colorblind-friendly: horizontal line pattern for draws */
  .summary-result.draw::before {
    content: '';
    position: absolute;
    left: 2px;
    top: 50%;
    transform: translateY(-50%);
    width: 6px;
    height: 2px;
    background: #6c3483;
  }

  .summary-result.loss {
    background: #f8d7da;
    color: #721c24;
    position: relative;
  }

  /* Colorblind-friendly: X pattern for losses */
  .summary-result.loss::before {
    content: '√ó';
    position: absolute;
    left: 2px;
    top: 50%;
    transform: translateY(-50%);
    font-size: 10px;
    line-height: 1;
    color: #721c24;
  }

  .summary-result.cancelled {
    background: #e9ecef;
    color: #6c757d;
  }

  .expand-icon {
    width: 20px;
    height: 20px;
    position: relative;
    margin-left: var(--spacing-sm);
  }

  .expand-icon::after {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 8px;
    height: 8px;
    border-right: 2px solid #666;
    border-bottom: 2px solid #666;
    transform: translate(-50%, -70%) rotate(45deg);
    transition: transform 0.2s ease;
  }

  .match-accordion[open] .expand-icon::after {
    transform: translate(-50%, -30%) rotate(-135deg);
  }

  .match-content {
    padding: 0 var(--spacing-lg) var(--spacing-lg);
    border-top: 1px solid #eee;
    background: #fafafa;
  }

  .match-header-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: var(--spacing-md);
    margin-bottom: var(--spacing-sm);
  }

  .match-details-compact {
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-md);
    color: var(--color-text-light);
    font-size: 0.9rem;
    margin-bottom: var(--spacing-sm);
  }

  .scorers-compact {
    background: #e8f5e9;
    padding: var(--spacing-sm) var(--spacing-md);
    border-radius: 8px;
    margin-bottom: var(--spacing-sm);
    font-size: 0.95rem;
  }

  .match-link-compact {
    display: inline-block;
    color: var(--color-primary);
    text-decoration: none;
    font-weight: 600;
    font-size: 0.9rem;
    margin-top: var(--spacing-sm);
  }

  .match-link-compact:hover {
    text-decoration: underline;
  }

  .match-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--spacing-lg);
    padding-bottom: var(--spacing-md);
    border-bottom: 2px solid #f0f0f0;
    flex-wrap: wrap;
    gap: var(--spacing-sm);
  }

  .match-date {
    font-size: 1.2rem;
    font-weight: 700;
    color: var(--color-primary);
  }

  .match-week {
    background: var(--color-primary);
    color: white;
    padding: var(--spacing-xs) var(--spacing-sm);
    border-radius: 20px;
    font-size: 0.9rem;
    font-weight: 600;
  }

  .venue-badge {
    display: inline-flex;
    align-items: center;
    gap: var(--spacing-xs);
    padding: var(--spacing-xs) var(--spacing-sm);
    border-radius: var(--radius);
    font-weight: 600;
    font-size: var(--font-size-sm);
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .venue-badge.home {
    background: linear-gradient(135deg, #00a651 0%, #00d064 100%);
    color: white;
    box-shadow: 0 2px 8px rgba(0, 166, 81, 0.3);
  }

  .venue-badge.away {
    background: linear-gradient(135deg, #1565c0 0%, #1976d2 100%);
    color: white;
    box-shadow: 0 2px 8px rgba(21, 101, 192, 0.3);
  }

  .venue-icon {
    font-size: 1em;
  }

  .match-teams {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: var(--spacing-lg);
    text-align: center;
  }

  .team {
    flex: 1;
  }

  .team-name {
    font-weight: 700;
    font-size: 1.1rem;
    margin-bottom: var(--spacing-xs);
  }

  .team-score {
    font-size: 2.5rem;
    font-weight: 900;
    color: var(--color-primary);
  }

  .vs {
    margin: 0 var(--spacing-lg);
    font-weight: 700;
