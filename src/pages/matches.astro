---
import BaseLayout from '../layouts/BaseLayout.astro';
import matchesData from '../../data/matches.json';
import seasonSchedule from '../../data/season-schedule.json';

const title = "Match Center";
const description = "View match details, scores, and highlights";

const base = import.meta.env.BASE_URL;

// Split matches into upcoming and completed, sort appropriately
const upcomingMatches = matchesData.matches
  .filter(m => m.result === 'pending')
  .sort((a, b) => new Date(a.date) - new Date(b.date));

const completedMatches = matchesData.matches
  .filter(m => m.result !== 'pending' && m.result !== 'cancelled')
  .sort((a, b) => new Date(a.date) - new Date(b.date)); // Chronological for timeline

const recentMatches = [...completedMatches].reverse(); // Most recent first for list

// Calculate season stats
const wins = completedMatches.filter(m => m.result.includes('win')).length;
const losses = completedMatches.filter(m => m.result.includes('loss')).length;
const draws = completedMatches.filter(m => m.result.includes('draw')).length;

let goalsFor = 0;
let goalsAgainst = 0;
completedMatches.forEach(m => {
  if (m.final_score) {
    goalsFor += m.final_score.qpr || 0;
    goalsAgainst += m.final_score.opponent || 0;
  }
});

// Get last 5 form
const last5 = recentMatches.slice(0, 5).map(m => {
  if (m.result.includes('win')) return 'W';
  if (m.result.includes('draw')) return 'D';
  return 'L';
}).reverse();

// Find milestones
const firstWin = completedMatches.find(m => m.result.includes('win'));
const cleanSheetMatches = completedMatches.filter(m =>
  m.final_score && m.final_score.opponent === 0
);
const firstCleanSheet = cleanSheetMatches.length > 0 ? cleanSheetMatches[0] : null;

// Helper function to determine home/away status
function getVenueInfo(match) {
  const scheduleMatch = seasonSchedule.matches.find(m => m.match_number === match.match_number);

  if (scheduleMatch) {
    const isQPRHome = scheduleMatch.home_team.includes('Queens Park Rangers') || scheduleMatch.home_team.includes('QPR');
    return {
      isHome: isQPRHome,
      icon: isQPRHome ? 'H' : 'A',
      text: isQPRHome ? 'Home' : 'Away',
      class: isQPRHome ? 'home' : 'away'
    };
  }

  const isHome = match.location.toLowerCase().includes('home') ||
                 match.location.toLowerCase() === 'tbd';

  return {
    isHome,
    icon: isHome ? 'H' : 'A',
    text: isHome ? 'Home' : 'Away',
    class: isHome ? 'home' : 'away'
  };
}

function getResultInfo(match) {
  if (match.result === 'cancelled') return { class: 'cancelled', letter: 'X' };
  if (match.result.includes('win')) return { class: 'win', letter: 'W' };
  if (match.result.includes('draw')) return { class: 'draw', letter: 'D' };
  return { class: 'loss', letter: 'L' };
}
---

<BaseLayout title={title} description={description}>
  <div class="matches-page">
    <!-- Header -->
    <header class="page-header">
      <h1>Match Center</h1>
      <p class="subtitle">2025-26 Season</p>
    </header>

    <!-- Quick Stats Bar -->
    <div class="stats-bar">
      <div class="stat">
        <span class="stat-value">{completedMatches.length}</span>
        <span class="stat-label">Played</span>
      </div>
      <div class="stat win">
        <span class="stat-value">{wins}</span>
        <span class="stat-label">Wins</span>
      </div>
      <div class="stat draw">
        <span class="stat-value">{draws}</span>
        <span class="stat-label">Draws</span>
      </div>
      <div class="stat loss">
        <span class="stat-value">{losses}</span>
        <span class="stat-label">Losses</span>
      </div>
      <div class="stat goals">
        <span class="stat-value">{goalsFor}</span>
        <span class="stat-label">Scored</span>
      </div>
    </div>

    <!-- Form Guide -->
    <div class="form-section">
      <div class="form-header">
        <span class="form-label">Current Form</span>
        <span class="form-streak">Last 5 games</span>
      </div>
      <div class="form-badges">
        {last5.map((result, i) => (
          <span class={`form-badge ${result.toLowerCase()}`} style={`animation-delay: ${i * 0.1}s`}>
            {result}
          </span>
        ))}
      </div>
    </div>

    <!-- Season Journey Timeline -->
    <section class="journey-section">
      <h2 class="section-title">
        <span class="title-icon">üìà</span>
        Season Journey
      </h2>
      <div class="journey-timeline">
        {completedMatches.map((match, index) => {
          const result = getResultInfo(match);
          const score = match.final_score ? `${match.final_score.qpr}-${match.final_score.opponent}` : '-';
          const isFirstWin = firstWin && match.id === firstWin.id;
          const isFirstCleanSheet = firstCleanSheet && match.id === firstCleanSheet.id;
          const isMilestone = isFirstWin || isFirstCleanSheet;

          return (
            <a href={`${base}matches/${match.id}/`} class={`journey-match ${result.class} ${isMilestone ? 'milestone' : ''}`}>
              <div class="journey-week">W{match.week}</div>
              <div class={`journey-result ${result.class}`}>{result.letter}</div>
              <div class="journey-score">{score}</div>
              {isMilestone && (
                <div class="milestone-badge">
                  {isFirstWin && isFirstCleanSheet ? '1st W + CS' : isFirstWin ? '1st Win!' : '1st CS!'}
                </div>
              )}
            </a>
          );
        })}
      </div>
      <div class="journey-legend">
        <span class="legend-item"><span class="dot win"></span> Win</span>
        <span class="legend-item"><span class="dot draw"></span> Draw</span>
        <span class="legend-item"><span class="dot loss"></span> Loss</span>
      </div>
    </section>

    <!-- Upcoming Match -->
    {upcomingMatches.length > 0 && (
      <section class="upcoming-section">
        <h2 class="section-title">
          <span class="title-icon">‚è≥</span>
          Next Match
        </h2>
        {upcomingMatches.slice(0, 1).map(match => {
          const venueInfo = getVenueInfo(match);
          return (
            <a href={`${base}matches/${match.id}/`} class="next-match-card">
              <div class="next-match-date">
                <span class="day">{new Date(match.date).toLocaleDateString('en-US', { weekday: 'short' })}</span>
                <span class="date">{new Date(match.date).toLocaleDateString('en-US', { month: 'short', day: 'numeric' })}</span>
              </div>
              <div class="next-match-info">
                <div class="matchup">
                  <span class="team-qpr">QPR</span>
                  <span class="vs">vs</span>
                  <span class="team-opp">{match.opponent}</span>
                </div>
                <div class="match-meta">
                  <span class="kickoff">{match.kickoff}</span>
                  <span class={`venue-pill ${venueInfo.class}`}>{venueInfo.text}</span>
                </div>
              </div>
              <div class="next-match-arrow">‚Üí</div>
            </a>
          );
        })}

        <!-- Remaining Fixtures -->
        {upcomingMatches.length > 1 && (
          <div class="upcoming-list">
            <div class="upcoming-header">
              <span>Upcoming Fixtures</span>
              <span class="upcoming-count">{upcomingMatches.length - 1} more</span>
            </div>
            <div class="upcoming-fixtures">
              {upcomingMatches.slice(1).map(match => {
                const venueInfo = getVenueInfo(match);
                return (
                  <a href={`${base}matches/${match.id}/`} class="fixture-row">
                    <span class="fixture-date">
                      {new Date(match.date).toLocaleDateString('en-US', { month: 'short', day: 'numeric' })}
                    </span>
                    <span class="fixture-opponent">{match.opponent}</span>
                    <span class={`fixture-venue ${venueInfo.class}`}>{venueInfo.icon}</span>
                  </a>
                );
              })}
            </div>
          </div>
        )}
      </section>
    )}

    <!-- Recent Results -->
    <section class="results-section">
      <h2 class="section-title">
        <span class="title-icon">üìã</span>
        Results
      </h2>
      <div class="results-list">
        {recentMatches.map((match, index) => {
          const venueInfo = getVenueInfo(match);
          const result = getResultInfo(match);
          const qprScore = match.final_score?.qpr ?? '-';
          const oppScore = match.final_score?.opponent ?? '-';
          const isLatest = index === 0;

          return (
            <a href={`${base}matches/${match.id}/`} class={`result-row ${result.class} ${isLatest ? 'latest' : ''}`}>
              <div class="result-left">
                <span class={`result-indicator ${result.class}`}>{result.letter}</span>
                <div class="result-teams">
                  <span class="result-opponent">{match.opponent}</span>
                  <span class="result-meta">
                    {new Date(match.date).toLocaleDateString('en-US', { month: 'short', day: 'numeric' })}
                    <span class={`venue-dot ${venueInfo.class}`}></span>
                    {venueInfo.text}
                  </span>
                </div>
              </div>
              <div class="result-right">
                <span class={`result-score ${result.class}`}>{qprScore}-{oppScore}</span>
                {isLatest && <span class="latest-badge">Latest</span>}
              </div>
            </a>
          );
        })}
      </div>
    </section>

    <!-- Milestones -->
    {(firstWin || firstCleanSheet) && (
      <section class="milestones-section">
        <h2 class="section-title">
          <span class="title-icon">üèÜ</span>
          Season Milestones
        </h2>
        <div class="milestones-grid">
          {firstWin && (
            <div class="milestone-card">
              <div class="milestone-icon">üéâ</div>
              <div class="milestone-content">
                <h3>First Win</h3>
                <p>vs {firstWin.opponent}</p>
                <span class="milestone-date">{new Date(firstWin.date).toLocaleDateString('en-US', { month: 'short', day: 'numeric' })}</span>
              </div>
            </div>
          )}
          {firstCleanSheet && (
            <div class="milestone-card">
              <div class="milestone-icon">üß§</div>
              <div class="milestone-content">
                <h3>First Clean Sheet</h3>
                <p>vs {firstCleanSheet.opponent}</p>
                <span class="milestone-date">{new Date(firstCleanSheet.date).toLocaleDateString('en-US', { month: 'short', day: 'numeric' })}</span>
              </div>
            </div>
          )}
          <div class="milestone-card">
            <div class="milestone-icon">‚öΩ</div>
            <div class="milestone-content">
              <h3>{wins} Wins</h3>
              <p>{goalsFor} goals scored</p>
              <span class="milestone-date">This season</span>
            </div>
          </div>
        </div>
      </section>
    )}
  </div>
</BaseLayout>

