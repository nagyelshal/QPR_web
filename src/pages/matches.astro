    border-radius: 12px;
    padding: var(--spacing-md);
    margin-bottom: var(--spacing-lg);
  }

  .detail-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: var(--spacing-xs) 0;
  }

  .label {
    font-weight: 600;
    color: var(--color-text-light);
  }

  .value {
    font-weight: 500;
  }

