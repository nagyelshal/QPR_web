---
import BaseLayout from '../layouts/BaseLayout.astro';
import Notice from '../components/Notice.astro';

const base = import.meta.env.BASE_URL;
const roster = await import('../../data/roster.json');
const playerProfiles = await import('../../data/player-profiles.json');

// Merge roster and profile data
const playersWithProfiles = roster.players.map(player => {
  const profile = playerProfiles.players.find(p => p.name === player.name);
  return {
    ...player,
    profile: profile || null
  };
});
---

<BaseLayout title="Roster - Queens Park Rangers U11B">
  <div class="container roster-page">
    <header class="roster-header">
      <h1>üèÜ Team Roster</h1>
      <p><strong>{roster.team}</strong> ‚Ä¢ {roster.season}</p>
      <div class="roster-stats">
        <div class="stat">
          <span class="number">{roster.players.length}</span>
          <span class="label">Players</span>
        </div>
        <div class="stat">
          <span class="number">{playersWithProfiles.filter(p => p.jersey !== 'TBD').length}</span>
          <span class="label">Jersey Numbers</span>
        </div>
      </div>
    </header>

    <div class="roster-grid">
      {playersWithProfiles.map((player) => {
        const playerId = player.name.toLowerCase()
          .replace(/\s+/g, '-')
          .replace(/[^a-z0-9-]/g, '');
        
        return (
          <a href={`${base}players/${playerId}/`} class="player-card">
            <div class="player-photo">
              <img 
                src={player.profile?.photo || '/images/players/placeholder.jpg'} 
                alt={player.name}
                onerror="this.src='/images/players/placeholder.jpg'"
              />
              <div class="jersey-badge">
                #{player.jersey}
              </div>
            </div>
            
            <div class="player-info">
              <h3 class="player-name">{player.name}</h3>
              {player.profile?.basic_info?.favorite_position && (
                <div class="player-position">
                  üìç {player.profile.basic_info.favorite_position}
                </div>
              )}
              <div class="player-team">
                ‚öΩ {player.profile?.basic_info?.favorite_team || 'Team TBD'}
              </div>
              {player.profile?.basic_info?.favorite_player && (
                <div class="player-idol">
                  ‚≠ê {player.profile.basic_info.favorite_player}
                </div>
              )}
              
              {player.profile?.season_stats && (
                <div class="quick-stats">
                  <span class="stat-item">{player.profile.season_stats.games_played} Games</span>
                  <span class="stat-item">{player.profile.season_stats.goals} Goals</span>
                  <span class="stat-item">{player.profile.season_stats.assists} Assists</span>
                </div>
              )}
            </div>
            
            <div class="view-profile">
              View Profile ‚Üí
            </div>
          </a>
        );
      })}
    </div>

      <!-- Team Information -->
      <div style="margin-top: var(--spacing-xl);">
        <h2>Team Information</h2>
        
        <div class="grid">
          <div class="card">
            <h3>Coaching Staff</h3>
            <p><strong>Head Coach:</strong> Nagy Elshal<br>
            <strong>Assistant Coach:</strong> Amy Williams<br>
            <strong>Team Manager:</strong> Zahra Damjanovic</p>
            <a href={`${base}about/`} class="btn btn-small">Coach Details ‚Üí</a>
          </div>

          <div class="card">
            <h3>Team Details</h3>
            <p><strong>Division:</strong> U11 Boys<br>
            <strong>Club:</strong> Coquitlam Metro-Ford SC<br>
            <strong>Team Name:</strong> Queens Park Rangers</p>
          </div>
        </div>
      </div>

      <!-- Privacy Notice -->
      <Notice type="info" title="Privacy & Safety">
        <p>Only first names and initials are displayed to protect player privacy. No birth dates, addresses, or contact information is shared on this public website.</p>
      </Notice>

      <!-- Parent Information -->
      <section style="margin-top: var(--spacing-xl);">
        <h2>For Parents</h2>
        <div class="card">
          <h3>Communication</h3>
          <p>Team communication happens through:</p>
          <ul>
            <li><strong>This website</strong> - Public announcements and schedules</li>
            <li><strong>TeamSnap</strong> - Direct chat and communication for registered parents only</li>
            <li><strong>Email updates</strong> - Important notifications from coach</li>
          </ul>
          
          <div style="margin-top: var(--spacing-md);">
            <a href={`${base}about/`} class="btn">Contact Coach</a>
            <a href={`${base}downloads/`} class="btn btn-secondary" style="margin-left: var(--spacing-sm);">Parent Forms</a>
          </div>
        </div>
      </section>
    </div>
  </div>
</BaseLayout>

<style>
  .roster-page {
    max-width: 1200px;
    margin: 0 auto;
    padding: var(--spacing-lg) var(--spacing-md);
  }

  .roster-header {
    text-align: center;
    margin-bottom: var(--spacing-2xl);
    padding: var(--spacing-xl) 0;
    background: linear-gradient(135deg, #1565c0 0%, #0d47a1 100%);
    color: white;
    border-radius: 16px;
    position: relative;
    overflow: hidden;
  }

  .roster-header::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23ffffff' fill-opacity='0.1'%3E%3Ccircle cx='30' cy='30' r='2'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E") repeat;
    opacity: 0.3;
  }

  .roster-header h1 {
    font-size: 2.5rem;
    font-weight: 700;
    margin: 0 0 var(--spacing-sm) 0;
    position: relative;
    z-index: 1;
  }

  .roster-header p {
    margin: 0 0 var(--spacing-md) 0;
    position: relative;
    z-index: 1;
    opacity: 0.9;
  }

  .roster-stats {
    display: flex;
    justify-content: center;
    gap: var(--spacing-xl);
    position: relative;
    z-index: 1;
  }

  .roster-stats .stat {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .roster-stats .number {
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: var(--spacing-xs);
  }

  .roster-stats .label {
    font-size: 0.9rem;
    opacity: 0.9;
  }

  .roster-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: var(--spacing-lg);
    margin-bottom: var(--spacing-2xl);
  }

  .player-card {
    background: white;
    border-radius: 16px;
    padding: var(--spacing-lg);
    box-shadow: 0 4px 16px rgba(0,0,0,0.08);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    text-decoration: none;
    color: inherit;
    position: relative;
    overflow: hidden;
    border: 1px solid rgba(0,0,0,0.05);
  }

  .player-card:hover {
    transform: translateY(-6px);
    box-shadow: 0 12px 32px rgba(0,0,0,0.15);
    border-color: rgba(25, 118, 210, 0.2);
  }

  .player-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(135deg, #1976d2 0%, #1565c0 50%, #ff9800 100%);
    transform: scaleX(0);
    transform-origin: left;
    transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .player-card:hover::before {
    transform: scaleX(1);
  }

  .player-photo {
    width: 80px;
    height: 80px;
    position: relative;
  border-radius: 50%;
  /* allow badge to sit partially outside without being clipped */
  overflow: visible;
    margin: 0 auto var(--spacing-md);
    box-shadow: 0 4px 16px rgba(0,0,0,0.15);
    transition: transform 0.3s ease;
  }

  .player-card:hover .player-photo {
    transform: scale(1.05);
  }

  .player-photo img {
    width: 100%;
    height: 100%;
  object-fit: cover;
  /* clip the image itself into a circle since the container no longer clips */
  border-radius: 50%;
  }

  .jersey-badge {
    position: absolute;
    top: -8px;
    right: -8px;
    background: linear-gradient(135deg, #ff9800 0%, #f57c00 100%);
    color: white;
    width: 32px;
    height: 32px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
    font-size: 0.9rem;
    border: 2px solid white;
    box-shadow: 0 3px 12px rgba(245, 124, 0, 0.3);
  transition: transform 0.3s ease;
  z-index: 2;
  pointer-events: none; /* prevent hover flicker by not capturing the pointer */
  }

  .player-card:hover .jersey-badge {
    transform: scale(1.1);
  }

  .player-info {
    text-align: center;
    margin-bottom: var(--spacing-md);
  }

  .player-name {
    font-size: 1.3rem;
    font-weight: 700;
    margin: 0 0 var(--spacing-xs) 0;
    color: var(--color-primary);
  }

  .player-position {
    color: var(--color-primary);
    font-weight: 600;
    margin-bottom: var(--spacing-xs);
    font-size: 0.9rem;
    background: rgba(25, 118, 210, 0.1);
    padding: 4px 12px;
    border-radius: 16px;
    display: inline-block;
  }

  .player-team {
    color: var(--color-text-light);
    font-size: 0.9rem;
    margin-bottom: var(--spacing-xs);
  }

  .player-idol {
    color: #ff9800;
    font-size: 0.85rem;
    margin-bottom: var(--spacing-sm);
    font-weight: 500;
  }

  .quick-stats {
    display: flex;
    justify-content: center;
    gap: var(--spacing-sm);
    font-size: 0.8rem;
  }

  .stat-item {
    background: rgba(25, 118, 210, 0.1);
    color: var(--color-primary);
    padding: 2px 8px;
    border-radius: 12px;
    font-weight: 600;
  }

  .view-profile {
    text-align: center;
    color: var(--color-primary);
    font-weight: 600;
    font-size: 0.9rem;
    opacity: 0;
    transform: translateY(10px);
    transition: all 0.3s ease;
  }

  .player-card:hover .view-profile {
    opacity: 1;
    transform: translateY(0);
  }

  @media (max-width: 768px) {
    .roster-grid {
      grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
      gap: var(--spacing-md);
    }

    .roster-stats {
      gap: var(--spacing-md);
    }

    .roster-stats .number {
      font-size: 1.5rem;
    }
  }
</style>
