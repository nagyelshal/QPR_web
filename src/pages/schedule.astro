---
import BaseLayout from '../layouts/BaseLayout.astro';
import Notice from '../components/Notice.astro';

const config = await import('../../data/config.json');
---

<BaseLayout title="Schedule - Queens Park Rangers U11B">
  <div class="container">
    <header style="text-align: center; margin-bottom: var(--spacing-2xl);">
      <h1>‚öΩ Practice & Game Schedule üèÜ</h1>
      <p>Regular practice times and upcoming fixtures for the 2025-2026 season.</p>
    </header>

    <div class="grid grid-2">
      <!-- Practice Schedule -->
      <div>
        <h2 class="soccer-icon">Practice Schedule</h2>
        <div class="card card-highlight team-highlight">
          <h3>üèÉ‚Äç‚ôÇÔ∏è Weekly Practice</h3>
          <div style="font-size: var(--font-size-lg); margin: var(--spacing-md) 0;">
            <p><strong>{config.practice_day}</strong></p>
            <p><strong>{config.practice_time}</strong></p>
            <p><strong>{config.practice_location}</strong></p>
          </div>
          <Notice type="info">
            <p><strong>Coach:</strong> Nagy Elshal<br>
            <strong>Team Level:</strong> U11B<br>
            <strong>Field:</strong> Grid D</p>
          </Notice>
        </div>

        <div style="margin-top: var(--spacing-lg); text-align: center;">
          <a href="/qpr_practice_placeholder.ics" class="btn" download>
            üìÖ Download Practice Calendar
          </a>
        </div>
      </div>

      <!-- Game Schedule -->
      <div>
        <h2 class="soccer-icon">Game Schedule</h2>
        <div class="card game-card">
          <h3>üèÜ Saturday Games</h3>
          <p><strong>Game Day:</strong> Saturdays<br>
          <strong>First Game:</strong> {config.first_game_weekend}</p>
          
          <Notice type="warning" title="Fixtures Pending">
            <p>Complete game schedule with opponents, fields, and kickoff times will be posted once the league releases fixtures.</p>
          </Notice>
        </div>

        <!-- Placeholder Game Schedule Table -->
        <div class="card" style="margin-top: var(--spacing-lg);">
          <h4>Upcoming Games</h4>
          <div class="table-responsive">
            <table class="table">
              <thead>
                <tr>
                  <th>Date</th>
                  <th>Opponent</th>
                  <th>Field</th>
                  <th>Kickoff</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td>Sept 6</td>
                  <td>TBD</td>
                  <td>TBD</td>
                  <td>TBD</td>
                </tr>
                <tr>
                  <td>Sept 13</td>
                  <td>TBD</td>
                  <td>TBD</td>
                  <td>TBD</td>
                </tr>
                <tr>
                  <td>Sept 20</td>
                  <td>TBD</td>
                  <td>TBD</td>
                  <td>TBD</td>
                </tr>
              </tbody>
            </table>
          </div>
          <p style="color: var(--color-text-light); font-size: var(--font-size-sm); margin-top: var(--spacing-md);">
            <em>Schedule will be updated as league fixtures are confirmed</em>
          </p>
        </div>
      </div>
    </div>

    <!-- Important Reminders -->
    <section style="margin-top: var(--spacing-2xl);">
      <h2>Important Reminders</h2>
      <div class="grid grid-2">
        <Notice type="info" title="Practice Attendance">
          <p>Please arrive 10 minutes early for warmup. Bring water bottle, shin guards, and appropriate footwear.</p>
        </Notice>
        
        <Notice type="success" title="Weather Updates">
          <p>Check team news for any weather-related practice cancellations. Updates will be posted by 3 PM on practice days.</p>
        </Notice>
      </div>
    </section>
  </div>
</BaseLayout>
